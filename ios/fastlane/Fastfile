
default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :deploy do

    match

    cocoapods(
      clean_install: true,
      podfile: "./Podfile"
    )

    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "prod",
      export_method: "app-store",
      clean: true,
      xcargs: "-allowProvisioningUpdates"
    )

    upload_to_testflight
  end
end
